{
  "manifest_version": 3,
  "name": "Youku Dual Subtitle",
  "version": "1.0.0",
  "description": "Dual subtitle display for Youku with Chinese-English Zhongwen hover dictionary",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.youku.tv/v/v_show/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Choose Subtitle Languages",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "data/cedict_ts.u8",
        "data/cedict.idx",
        "data/grammarKeywordsMin.json",
        "data/vocabularyKeywordsMin.json",
        "help.html"
      ],
      "matches": ["https://www.youku.tv/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youku.tv/v/v_show/*"],
      "js": ["content.js"],
      "css": ["zhongwen-popup.css"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://www.youku.tv/v/v_show/*"],
      "js": ["bridge.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    }
  ]
}
